{
  "tests": [
    {
      "name": "OPTIONS request for CORS",
      "method": "OPTIONS",
      "path": "/",
      "expectedStatus": 200,
      "expectedBody": "",
      "bodyMatcher": "exact"
    },
    {
      "name": "Valid contact form submission",
      "method": "POST",
      "path": "/",
      "body": {
        "name": "Иван Иванов",
        "email": "ivan@example.com",
        "message": "Здравствуйте, хочу узнать подробнее о вашем сервисе"
      },
      "expectedStatus": 200,
      "expectedBody": {
        "success": true,
        "message": "string",
        "data": {
          "name": "string",
          "email": "string"
        }
      },
      "bodyMatcher": "partial"
    },
    {
      "name": "Invalid email format",
      "method": "POST",
      "path": "/",
      "body": {
        "name": "Иван",
        "email": "invalid-email",
        "message": "Test message for validation"
      },
      "expectedStatus": 422,
      "bodyMatcher": "any"
    },
    {
      "name": "Message too short",
      "method": "POST",
      "path": "/",
      "body": {
        "name": "Иван",
        "email": "test@example.com",
        "message": "Short"
      },
      "expectedStatus": 422,
      "bodyMatcher": "any"
    },
    {
      "name": "GET method not allowed",
      "method": "GET",
      "path": "/",
      "expectedStatus": 405,
      "expectedBody": {
        "error": "string"
      },
      "bodyMatcher": "partial"
    }
  ]
}
